{% extends 'index.html.twig' %}
{% block overview "" %}

{% block content %}

<section id="item">
  <div class="row">
    <div class="span3">
      <div class="well">
        <h3>{{ keywords }}</h3>
        <div class="actions">
          <button class="btn btn-success">Follow</button>
        </div>
      </div>
    </div>
    <div class="span9">
      {% for item in items %}
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object" data-src="holder.js/64x64">
          </a>
          <div class="media-body">
            <h4 class="media-heading">{{ item.ItemAttributes.Title }}</h4>
            <p>発売日 {{ item.ItemAttributes.PublicationDate }}</p>
            <div class="btn-group">
              <button class="btn btn-small btn-info">もってる</button>
              <button class="btn btn-small">カレンダーに登録</button>
              <button class="btn btn-small btn-inverse">いらない</button>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% endblock content %}


